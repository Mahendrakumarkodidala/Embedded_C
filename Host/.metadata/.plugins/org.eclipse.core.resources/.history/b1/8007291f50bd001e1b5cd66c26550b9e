#include <stdio.h>
#include <stdint.h>

#define PI 3.145

#define AREA(r) PI * r * r

void Wait_for_input (void);

int main()
{
	uint32_t area;
	area = AREA(3);

	printf("Area = %d\n",area);
	Wait_for_input();
		return 0;
	}


	void Wait_for_input (void)
	{
		printf("\n\nPress Enter key to exit\n");
		while (getchar() != '\n')
		{

		};
		getchar();
	}
}

